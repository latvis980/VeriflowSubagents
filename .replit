entrypoint = "app.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["bash", "gitFull", "libxcrypt", "playwright-driver", "xcodebuild", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "app.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80
